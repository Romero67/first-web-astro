</div>

<style lang="scss">
 @import "../base.scss";
 
  .sidebar {
    position: absolute;
    background: $color-brand;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    padding-top: 100px;
    text-align: center;
    top: -100%;
    transition: top 0.5s;
    z-index: 2;

    &.show {
      top: 0;
    }
    a {
      color: $color-white;
    }
    .btn-close svg {
      width: 30px;
      height: 30px;
      position: absolute;
      top: 15px;
      right: 15px;
    }

    &-nav {
      font-size: 20px;
      row-gap: 20px;
      display: flex;
      flex-direction: column;
    }
  }
</style>

<script>
  function initBtnMenuSidebar() {
    const sidebar = document.querySelector(".sidebar");
    const btnMenu = document.querySelector(".sidebar .btn-close");

    if (!btnMenu || !sidebar) {
      console.log("no hay botones o sidebar");
      return;
    }

    btnMenu.addEventListener("click", () => {
      sidebar.classList.remove("show");
    });
  }

  initBtnMenuSidebar();
</script>
